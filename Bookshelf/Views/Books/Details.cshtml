@model Bookshelf.Models.Book

<h3>Book</h3>
<form method="post" action="/Books/Delete/@Model.Id"
      id="deleteForm">
    @Html.AntiForgeryToken()
    <div class="btn-group">
        <a href="/Books/Edit/@Model.Id"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            Edit book
        </a>
        <button id="submit" type="submit" class="btn btn-danger btn-sm">
            <i class="glyphicon glyphicon-trash"></i>
            Delete book
        </button>
    </div>
</form>

<div class="media">
    <div class="media-left">
        <!-- [START bookimage] -->
        <img class="book-image"
             src="@(String.IsNullOrEmpty(Model.ImageUrl) ?
        "http://placekitten.com/g/128/192" : Model.ImageUrl)">
        <!-- [END bookimage] -->        
    </div>
    <div class="media-body">
        <h4 class="book-title">
            @Model.Title
            <small>@(Model.PublishedDate.HasValue ? Model.PublishedDate.Value.ToString("d") : null)</small>
        </h4>
        <h5 class="book-author">
            By @(String.IsNullOrEmpty(Model.Author) ?
        "Unknown" : Model.Author)
        </h5>
        <p class="book-description">@Model.Description</p>
    </div>
</div>